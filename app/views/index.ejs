<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head', {title : 'Carteirinha Digital - ASSIFEMS'}) %>
  </head>
  <body>
    <!-- Header -->
    <header>
      <div>
        <img class="assifems" src="/images/assifems.png" />
      </div>

      <div class="options">
        <div id="return" onclick="menu()">
          <span style="cursor: pointer"><%= associate.name %></span
          ><img class="icon_arrow" id="arrow" src="images/icons/arrow.svg" />
        </div>
        <img id="hamburger" src="images/icons/hamburger.svg" onclick="menu()" />
        <div><h1 class="title_carteirinha">Carteirinha Digital</h1></div>

        <div id="more_options">
          <div class="division">
            <div class="up">
              <img id="close" src="images/icons/close.svg" onclick="menu()" />
              <div>
                <a href="/">Logado em
                  <b>
                    <span class="associate_name" style="color: #029450; font-size: 15px"><%= associate.name %></span>
                  </b>
                </a>
              </div>
              <div class="selected">Vizualizar carteirinha</div>
              <div><a href="/estabelecimentos">Estabelecimentos</a></div>
              <div>
                <form action="/deslogar" method="post">
                  <input class="deslogar" type="submit" value="Sair" />
                </form>
              </div>
            </div>

            <div class="down">
              <div>
                <a href="https://wa.me/556781321492">
                  <img class="icon_help" src="images/icons/help_white.svg" />
                  Preciso de ajuda</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Div -->
    <container-desktop>
      <!-- Desktop Title -->
      <div class="title">
        CARTEIRINHA DIGITAL<a href="https://wa.me/556781321492"
          ><img src="images/icons/help.svg"
        /></a>
      </div>
      <!-- Title End -->

      <!-- Main Content -->
      <div class="page">
        <!-- Left Side -->
        <div class="left">
          <div
            class="photo"
            style="background-image: url(<%= associate.photoURL %>)"
          ></div>

          <span>
            Status:
            <span class="status"><%= associate.status %></span>
          </span>
        </div>

        <!-- Left End -->

        <!-- Right Side -->
        <div class="right">
          <h1>Dados Pessoais</h1>

          <!-- First Line -->
          <div class="lines">
            <div class="data">
              <span class="red">Nome e Sobrenome:</span>
              <span class="name"><%= associate.name %></span>
            </div>
          </div>

          <!-- First Line End -->

          <!-- Second Line -->
          <div class="lines">
            <!--Birth Date -->
            <div class="data">
              <span class="red">Data de Nascimento</span>
              <span>
                <%= associate.birth_date.toLocaleDateString('pt-BR') %>
              </span>
            </div>

            <!--Birth Date End -->

            <!--CPF -->
            <div class="data">
              <span class="red">CPF</span>
              <span><%= associate.cpf %></span>
            </div>

            <!--CPF End -->

            <!--RG -->
            <div class="data">
              <span class="red">RG</span>
              <span><%= associate.rg %></span>
            </div>
            <!--RG End -->
          </div>
          <!-- Second Line End -->

          <!--Third Line -->
          <div class="lines">
            <!--SIAPE -->
            <div class="data">
              <span class="red">SIAPE</span>
              <span><%= associate.siape %></span>
            </div>
            <!--SIAPE End -->

            <!--Validity -->
            <div class="data">
              <span class="red">Validade da Carteirinha</span>
              <span><%= associate.validity.toLocaleDateString('pt-BR') %></span>
            </div>
            <!--Validity End -->
          </div>
          <!--Third Line End -->
        </div>
        <!-- Right Side End -->
      </div>
      <!-- Main Content End -->
    </container-desktop>

    <!-- Mobile Version -->

    <container-mobile>
      <!-- Profile Photo -->
      <div
        class="photo"
        style="background-image: url(<%= associate.photoURL %>)"></div>
      <!-- Profile Photo End -->

      <!-- Name and Status -->
      <div>
        <h1 class="red"><%= associate.name %></h1>
        <span>
          <span class="green">Status: </span>
          <span class="status"><%= associate.status %></span>
          </span>
      </div>
      <!-- Name and Status End -->

      <!-- Birthdate and Validity -->
      <div>
        <p>Data de nascimento</p>
        <span class="green"><%= associate.birth_date.toLocaleDateString('pt-BR') %></span>
        <p>Validade da Carteirinha</p>
        <span class="green"><%= associate.validity.toLocaleDateString('pt-BR') %></span>
      </div>
      <!-- Birthdate and Validity End -->

      <!-- DOCS -->
      <div class="green-box">
        <p class="green">CPF</p>
        <span><%= associate.cpf %></span>
        <p class="green">RG</p>
        <span><%= associate.rg %></span>
        <p class="green">SIAPE</p>
        <span><%= associate.siape %></span>
      </div>
      <img class="assifems" src="/images/assifems.png" />
      <!-- DOCS End -->
    </container-mobile>

    <!-- Footer -->
    <footer>Desenvolvido por Andr√© Lopes, Igor Santana e Juan Silva.</footer>
    <!-- Footer End -->

    <!-- Scripts -->
    <script src="js/script.js"></script>
  </body>
</html>
